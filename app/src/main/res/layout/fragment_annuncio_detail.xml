<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.annuncio_detail.AnnuncioDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-41dp"
        tools:layout_editor_absoluteY="-141dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/text_annuncio_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Titolo"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_Titolo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_Titolo"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Titolo:"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/annuncio_icon"
                android:layout_width="281dp"
                android:layout_height="112dp"
                android:src="@drawable/category_anziani"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_annuncio_title"
                app:layout_constraintVertical_bias="0.094" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="Data"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_Date"
                app:layout_constraintTop_toBottomOf="@+id/annuncio_icon" />

            <TextView
                android:id="@+id/textView_Date"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Data:"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/annuncio_icon" />


            <TextView
                android:id="@+id/textView_Time"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                android:text="Orario:"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Date" />


            <TextView
                android:id="@+id/text_Time"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="25dp"
                android:text="Orario"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_Time"
                app:layout_constraintTop_toBottomOf="@+id/text_date" />


            <TextView
                android:id="@+id/text_Location"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="3dp"
                android:text="Location"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_Location"
                app:layout_constraintTop_toBottomOf="@+id/text_Time" />

            <TextView
                android:id="@+id/textView_Location"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                android:text="Location:"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Time" />

            <TextView
                android:id="@+id/text_Partecipanti"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="25dp"
                android:text="Numero Partecipanti"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_Partecipanti"
                app:layout_constraintTop_toBottomOf="@+id/text_Location" />

            <TextView
                android:id="@+id/text_NApplicazioni"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="70dp"
                android:textSize="18sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_Descrizione2"
                app:layout_constraintTop_toTopOf="@+id/text_Descrizione" />

            <TextView
                android:id="@+id/text_Applicazioni"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="70dp"
                android:textSize="18sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_Descrizione2"
                app:layout_constraintTop_toTopOf="@+id/text_Descrizione" />

            <TextView
                android:id="@+id/textView_Partecipanti"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Partecipanti:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Location" />


            <TextView
                android:id="@+id/text_Descrizione"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="25dp"
                android:scrollbars="vertical"
                android:text="Descrizione:"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_Descrizione"
                app:layout_constraintTop_toBottomOf="@+id/text_Partecipanti" />


            <TextView
                android:id="@+id/textView_Descrizione"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Descrizione:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Partecipanti" />


            <TextView
                android:id="@+id/textView_Descrizione2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Applcazioni:"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView_Descrizione" />

            <Button
                android:id="@+id/button_Applicati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Applicati"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.392"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_Applicazioni" />

            <Button
                android:id="@+id/button_ConfermaAttivita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Conferma avvenuta attività"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_Applicazioni" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>