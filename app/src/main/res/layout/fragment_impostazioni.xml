<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.fragment.ImpostazioniFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-26dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:layout_editor_absoluteY="1dp">


            <TextView
                android:id="@+id/titoloImpostazioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="20dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                android:text="Cambio Dati"
                android:textSize="22sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/mod_text_nome"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:hint="@string/Nome"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                android:text="Nome:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/mod_nome"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/mod_nome"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background_graphic"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="20dp"
                android:hint="@string/Nome"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/mod_cognome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mod_text_cognome"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/Nome"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                android:text="Cognome:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/mod_cognome"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_text_nome" />

            <EditText
                android:id="@+id/mod_cognome"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background_graphic"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="20dp"
                android:hint="@string/Cognome"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_nome" />


            <EditText
                android:id="@+id/mod_email"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background_graphic"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="20dp"
                android:hint="@string/prompt_email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_cognome" />

            <EditText
                android:id="@+id/mod_nickname"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background_graphic"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="20dp"
                android:hint="@string/nickname"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_email" />


            <EditText
                android:id="@+id/mod_password"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background_graphic"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="20dp"
                android:hint="@string/prompt_password"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_nickname" />

            <TextView
                android:id="@+id/mod_text_email"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/Nome"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                android:text="Email:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/mod_email"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_text_cognome" />

            <TextView
                android:id="@+id/mod_text_nickname"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/Nome"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                android:text="Nickname:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/mod_nickname"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_text_email" />

            <TextView
                android:id="@+id/mod_text_password"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/Nome"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                android:text="Password:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/mod_nickname"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_text_nickname" />

            <TextView
                android:id="@+id/mod_text_descrizione"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="@string/Nome"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                android:text="Descrizione:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/mod_nickname"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_text_password" />

            <Button
                android:id="@+id/button_annulla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="44dp"
                android:enabled="true"
                android:text="@string/Annulla"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.343"
                app:layout_constraintStart_toEndOf="@+id/button_mod_dati"
                app:layout_constraintTop_toBottomOf="@+id/mod_descrizione" />

            <Button
                android:id="@+id/button_mod_dati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="44dp"
                android:enabled="true"
                android:text="@string/cambia_dati"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_descrizione" />

            <EditText
                android:id="@+id/mod_descrizione"
                android:layout_width="230dp"
                android:layout_height="100dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/background_graphic"
                android:drawableLeft="@drawable/ic_description"
                android:drawablePadding="20dp"
                android:hint="@string/Inserisci_Descrizione"
                android:inputType="textMultiLine|text"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mod_password" />

            <ProgressBar
                android:id="@+id/progress_bar_impostazioni"
                style="@style/Base.Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:visibility="invisible" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>