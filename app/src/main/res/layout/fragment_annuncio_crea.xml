<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unive.aiutovicino.MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android.hint="@string/hint_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/hint_dropdown"
        android:inputType="none">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/input_descrizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="@string/Descrizione"
        android:inputType="text"
        android:selectAllOnFocus="true"/>

    <EditText
        android:id="@+id/input_luogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:hint="@string/Luogo"
        android:inputType="text"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/input_coin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="@string/Coin"
        android:inputType="none|number"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/input_partecipanti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:hint="@string/Partecipanti"
        android:inputType="none|number"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/input_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:hint="@string/Data"
        android:inputType="date|none"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/input_orario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:hint="@string/Orario"
        android:inputType="none|time"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/button_crea"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:text="@string/menu_crea_annuncio" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>