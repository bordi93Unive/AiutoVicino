<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unive.aiutovicino.MainActivity">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:fillViewport="true" >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingBottom="@dimen/activity_vertical_margin">

   <TextView
       android:id="@+id/text_scegli_categoria"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="4dp"
       android:text="Scegli Categoria"
       android:textSize="18sp"
       app:layout_constraintTop_toTopOf="parent"
       tools:layout_editor_absoluteX="16dp" />

   <Spinner
       android:id="@+id/input_categoria"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_marginTop="5dp"
       android:hint="@string/Inserisci_Categoria"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/text_scegli_categoria" />

   <EditText
       android:id="@+id/input_date"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:background="@drawable/background_graphic"
       android:drawableLeft="@drawable/ic_calendar"
       android:drawablePadding="20dp"
       android:hint="@string/Inserisci_Data"
       android:inputType="none"
       android:paddingLeft="8dp"
       android:paddingTop="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="12dp"
       android:selectAllOnFocus="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/input_title" />

   <EditText
       android:id="@+id/input_time"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:background="@drawable/background_graphic"
       android:drawableLeft="@drawable/ic_time"
       android:drawablePadding="20dp"
       android:hint="@string/Inserisci_Orario"
       android:inputType="none"
       android:paddingLeft="8dp"
       android:paddingTop="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="12dp"
       android:selectAllOnFocus="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/input_date" />

   <EditText
       android:id="@+id/input_partecipanti"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:background="@drawable/background_graphic"
       android:drawableLeft="@drawable/ic_user"
       android:drawablePadding="20dp"
       android:hint="@string/Inserisci_Partecipanti"
       android:inputType="numberDecimal"
       android:paddingLeft="8dp"
       android:paddingTop="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="12dp"
       android:selectAllOnFocus="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/input_time" />

   <EditText
       android:id="@+id/input_place"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:background="@drawable/background_graphic"
       android:drawableLeft="@drawable/ic_place"
       android:drawablePadding="20dp"
       android:hint="@string/Inserisci_Luogo"
       android:inputType="textCapSentences"
       android:paddingLeft="8dp"
       android:paddingTop="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="12dp"
       android:selectAllOnFocus="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/input_partecipanti" />

   <EditText
       android:id="@+id/input_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:background="@drawable/background_graphic"
       android:drawableLeft="@drawable/ic_description"
       android:drawablePadding="20dp"
       android:hint="@string/Inserisci_Titolo"
       android:inputType="textCapSentences"
       android:maxLength="40"
       android:paddingLeft="8dp"
       android:paddingTop="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="12dp"
       android:selectAllOnFocus="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/input_categoria" />

   <EditText
       android:id="@+id/input_desription"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_marginTop="20dp"
       android:background="@drawable/background_graphic"
       android:drawableLeft="@drawable/ic_description"
       android:drawablePadding="20dp"
       android:hint="@string/Inserisci_Descrizione"
       android:inputType="textMultiLine|textCapSentences"
       android:paddingLeft="8dp"
       android:paddingTop="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="12dp"
       android:selectAllOnFocus="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/input_place" />

   <EditText
       android:id="@+id/input_coin"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:background="@drawable/background_graphic"
       android:drawableLeft="@drawable/ic_coin"
       android:drawablePadding="20dp"
       android:hint="@string/Inserisci_Coin"
       android:inputType="number"
       android:paddingLeft="8dp"
       android:paddingTop="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="12dp"
       android:selectAllOnFocus="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.687"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/input_desription" />


   <Button
       android:id="@+id/button_crea"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:drawablePadding="20dp"
       android:paddingLeft="8dp"
       android:paddingTop="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="12dp"
       android:selectAllOnFocus="true"
       android:text="@string/menu_crea_annuncio"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.497"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/input_coin" />

   <ProgressBar
       android:id="@+id/progress_bar_creaAnnuncio"
       style="@style/Base.Widget.AppCompat.ProgressBar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="590dp"
       android:indeterminate="true"
       android:visibility="invisible"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.812"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:visibility="invisible" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>