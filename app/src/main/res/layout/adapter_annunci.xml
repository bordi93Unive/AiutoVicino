<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/adapter_corsi_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/category_anziani"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adapter_corsi_title"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Titolo"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adapter_corsi_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adapter_corsi_date_time"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Data Ora"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adapter_corsi_icon"
            app:layout_constraintTop_toBottomOf="@+id/adapter_corsi_title" />

        <TextView
            android:id="@+id/adapter_corsi_text_status"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Completato / In corso"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/adapter_corsi_partecipanti"
            app:layout_constraintTop_toBottomOf="@+id/adapter_corsi_date_time" />

        <TextView
            android:id="@+id/adapter_corsi_partecipanti"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="105dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Partecipanti"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.391"
            app:layout_constraintStart_toEndOf="@+id/adapter_corsi_icon"
            app:layout_constraintTop_toBottomOf="@+id/adapter_corsi_date_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>